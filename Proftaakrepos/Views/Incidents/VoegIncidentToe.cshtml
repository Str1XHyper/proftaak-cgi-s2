@model AddIncidentModel
@using Models;
@{
    ViewData["Title"] = "VoegIncidentToe";
}

<div class="card">
    <div class="card-header bg-dark text-white">@Proftaakrepos.Resources.lang.NieuwIncident</div>
    <form method="post">
        <div class="card-body">
            <div asp-validation-summary="All">

            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">@Proftaakrepos.Resources.lang.IncidentNaam: </span>
                </div>
                <input type="text" class="form-control" asp-for="IncidentNaam">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">@Proftaakrepos.Resources.lang.IncidentOmschrijving: </span>
                </div>
                <input type="text" class="form-control" asp-for="IncidentOmschrijving">
            </div>
</div>
        <div class="card-footer"><input type="submit" class="btn btn-outline-secondary" value="@Proftaakrepos.Resources.lang.VoegToe"></div>
</form>
</div>