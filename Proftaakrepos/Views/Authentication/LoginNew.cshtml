@using Models
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="theme-color" content="grey" />
    <meta name="author" content="" />
    <title>Login</title>
    <link rel="manifest" href="/manifest.json">
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body style="background-image: linear-gradient(#343a40, #212529); ">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container mt-5 pt-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header sb-sidenav-dark text-white"><h3 class="text-center font-weight-light my-4">Login</h3> <h5 class="text-center font-weight-light my-4 text-danger">@ViewData["Error"]</h5></div>
                                <div class="card-body">
                                    <form asp-action="Login" asp-controller="Authentication" method="post">
                                        <div class="form-group"><label class="small mb-1" for="inputEmailAddress">Email</label><input class="form-control py-4" asp-for="Username" id="inputEmailAddress" type="email" placeholder="E-mail" /></div>
                                        <div class="form-group"><label class="small mb-1" for="inputPassword">Wachtwoord</label><input class="form-control py-4" asp-for="Password" id="inputPassword" type="password" placeholder="Wachtwoord" /></div>
                                        <input type="hidden" id="IP" asp-for="IP"/>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox"><input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" /><label class="custom-control-label" for="rememberPasswordCheck">Wachtwoord onthouden</label></div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0"><a class="small text-secondary" href="/Account/ChangePassword"><u>Wachtwoord vergeten?</u></a><input type="submit" class="btn btn-outline-secondary" value="Inloggen" /> </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-3 text-white mt-auto" style="background-color: transparent">
                <div class="container-fluid">
                    <hr style="background-color: white;" />
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-white">&copy; @DateTime.Today.Year -  CGI</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
