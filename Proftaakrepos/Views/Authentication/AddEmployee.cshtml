@model AddEmployee
@{
    ViewData["Title"] = "Voeg een werknemer toe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Voeg werknemer toe</h1>
<p style="color: red;">@ViewData["result"]</p>
<link rel="stylesheet" type="text/css" href="~/css/addEmployee.css">
<div class="form">
    <div style="color: red;">@ViewData["Error"]</div>

    <form asp-action="AddEmployee" asp-controller="Authentication" method="post" class="login-form">
        <div style="color: red;"></div>
        <div class="banner"><center><h5 style="color: white">BASIS INFORMATIE</h5></center></div>
        <input id="inputfield" asp-for="naam" type="text" placeholder="Voornaam">
        <input id="inputfield" asp-for="tussenvoegsel" type="text" placeholder="Tussenvoegsel">
        <input id="inputfield" asp-for="achternaam" type="text" placeholder="Achternaam">

        <div class="banner"><center><h5 style="color: white">CONTACT INFORMATIE</h5></center></div>
        <input id="inputfield" asp-for="eMail" type="email" placeholder="E-mail">
        <input id="inputfield" asp-for="phoneNumber" type="text" placeholder="Telefoonnummer">
        <input id="inputfield" asp-for="straatnaam" type="text" placeholder="Straatnaam">
        <input id="inputfield" asp-for="huisNummer" type="text" placeholder="Huisnummer">
        <input id="inputfield" asp-for="postcode" type="text" placeholder="Postcode">
        <input id="inputfield" asp-for="woonplaats" type="text" placeholder="Woonplaats">
        <select id="inputfield" name="role">
            @{ if (ViewData["roles"] == null) { }
                else
                {
                    string[] rollen = ViewData["roles"] as string[];
                    for (int i = 0; i < rollen.Length; i++)
                    {
                        <option value="@rollen[i]">@rollen[i]</option>
                    }
                }
            }
        </select>
        <div class="banner"><center><h5 style="color: white">INSTELLINGEN</h5></center></div>
        <p>Email notificatie</p>
        <input type="radio" name="emailsetting" value="Ja" /> <label>Ja</label>
        <input type="radio" name="emailsetting" value="Nee" />
        <label>Nee</label>
        <p>SMS notificatie</p>
        <input type="radio" name="smssetting" value="Ja" />
        <label>Ja</label>
        <input type="radio" name="smssetting" value="Nee" />
        <label>Nee</label>
        <br>
        <input type="submit" value="Voeg toe">
    </form>
</div>