@model Proftaakrepos.Models.EventModel
@{
    ViewData["Title"] = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agenda</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/fullcalendar/core/main.min.js"></script>
    <script src="~/js/fullcalendar/daygrid/main.min.js"></script>
    <script src="~/js/fullcalendar/daygrid/main.js"></script>
    <script src="~/js/fullcalendar/timegrid/main.min.js"></script>
    <script src="~/js/fullcalendar/bootstrap/main.min.js"></script>
    <script src="~/js/fullcalendar/core/main.js"></script>
    <script src="~/js/fullcalendar/interaction/main.js"></script>
    <script src="~/js/myCalendar.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/bootstrap/main.min.css" integrity="sha256-auNBxJ+1OpvUJfYRsPihqLzJFUM9D3gpb8nOh5v0LiM=" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.css" integrity="sha256-Lfe6+s5LEek8iiZ31nXhcSez0nmOxP+3ssquHMR3Alo=" crossorigin="anonymous" />
    <link href="~/css/main.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Agenda.css" />

</head>
<body>
    @{
        if (ViewData["rol"] as string == "Roostermaker")
        {
            <div class="card mb-4">
                <div class="card-header bg-dark text-white" style="border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;">Werknemer:</div>
                <div class="card-body bg-white">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm" style="width: 140px">Werknemer:</span>
                        </div>
                        <select onChange="FetchEvents(); RemoveEvents();" class="form-control" name="userId" id="userIdField1">
                            @{ if (ViewData["employees"] == null)
                                { }
                                else
                                {
                                    string[] employeesId = ViewData["employeesId"] as string[];
                                    string[] employees = ViewData["employees"] as string[];
                                    <option value="-1">Allemaal</option>
                                    for (int i = 0; i < employees.Length; i++)
                                    {
                                        <option selected="@(ViewData["userId"] as string == employeesId[i])" value="@employeesId[i]">@employees[i]</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm" style="width: 140px">Soort:</span>
                        </div>
                        <select onchange="FetchEvents(); RemoveEvents();" on class="form-control" id="soortDienstField">
                            <option selected value="Allemaal">Allemaal</option>
                            <option value="#E9967A">Stand-by</option>
                            <option value="#98FB98">Incidenten</option>
                            <option value="#FFFF99">Pauze</option>
                            <option value="#D8BFD8">Verlof</option>
                            <option value="#87CEFA">Noodgevallen</option>
                        </select>
                    </div>
                </div>
            </div>
        }
    }
    <div class="card mb-4">
        <div class="card-header bg-dark text-white" style="border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;">Rooster:</div>
        <div class="card-body bg-white">
            <div id="calendar"></div>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <form id="modalForm" asp-action="CreateEvent" asp-controller="Planner" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (ViewData["rol"].ToString() == "Roostermaker")
                        {
                            <input id="rol" type="hidden" value="roostermaker" />

                        }
                        else
                        {
                            <input id="rol" type="hidden" value="overig" />
                        }
                        <input id="eventIdField" type="hidden" asp-for="eventId" value="0" />
                        <input type="hidden" asp-for="voornaam" value="........." />
                        @if (ViewData["rol"].ToString() == "Roostermaker")
                        {
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Werknemer: </span>
                                </div>
                                <select asp-for="userId" class="form-control" id="userIdField" name="userId" value="">
                                    @{ if (ViewData["employees"] == null)
                                        { }
                                        else
                                        {
                                            string[] employeesId = ViewData["employeesId"] as string[];
                                            string[] employees = ViewData["employees"] as string[];
                                            <option value="-1">Allemaal</option>
                                            for (int i = 0; i < employees.Length; i++)
                                            {
                                                <option selected="@(employeesId[i])" value="@employeesId[i]">@employees[i]</option>
                                            }
                                        }
                                    }
                                </select>


                                <span asp-validation-for="voornaam" class="text-danger"></span>
                            </div>
                        }
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Type: </span>
                            </div>
                            <select onChange="EditTitle(this.options[this.selectedIndex].text)" asp-for="themeColor" class="form-control" id="themeColorField" name="themeColor">
                                <option value="#E9967A">Stand-by</option>
                                <option value="#98FB98">Incidenten</option>
                                <option value="#FFFF99">Pauze</option>
                                <option value="#D8BFD8">Verlof</option>
                                <option value="#87CEFA">Noodgevallen</option>
                            </select>
                            <span asp-validation-for="themeColor" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Titel: </span>
                            </div>
                            <input id="titleField" asp-for="title" class="form-control" value="" />
                            <span asp-validation-for="title" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Beschrijving: </span>
                            </div>
                            <input id="descriptionField" asp-for="description" class="form-control" value="" />
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Start: </span>
                            </div>
                            <input id="startField" asp-for="startDate" class="form-control" />
                            <span asp-validation-for="startDate" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Einde: </span>
                            </div>
                            <input id="endField" asp-for="endDate" class="form-control" />
                            <span asp-validation-for="endDate" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Hele dag: </span>
                            </div>
                            <select asp-for="isFullDay" class="form-control" id="fullDayField" name="isFullDay">

                                <option selected value="0">Nee</option>
                                <option value="1">Ja</option>
                            </select>
                        </div>
                        @if (ViewData["rol"].ToString() == "Roostermaker")
                        {
                            <input type="button" value="Verwijder" class="btn btn-danger additional-buttons" onclick="DeleteEvent(eventId); FetchEvents(); RemoveEvents();" />
                            <input id="submitButton" onClick="HandleRequest(); RemoveEvents();" value="Wijzig" class="btn btn-outline-secondary additional-buttons" />
                        }
                        else
                        {
                            <input type="button" value="Ruilverzoek Aanvragen" class="btn btn-outline-secondary" onclick="TradeEvent(); RemoveEvents();" />
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>





