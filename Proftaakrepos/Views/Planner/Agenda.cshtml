@model Proftaakrepos.Models.EventModel
@{
    ViewData["Title"] = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agenda</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/fullcalendar/core/main.min.js"></script>
    <script src="~/js/fullcalendar/daygrid/main.min.js"></script>
    <script src="~/js/fullcalendar/daygrid/main.js"></script>
    <script src="~/js/fullcalendar/timegrid/main.min.js"></script>
    <script src="~/js/fullcalendar/bootstrap/main.min.js"></script>
    <script src="~/js/fullcalendar/core/main.js"></script>
    <script src="~/js/fullcalendar/interaction/main.js"></script>
    <script src="~/js/myCalendar.js"></script>
    <script src="~/js/ShiftView.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/bootstrap/main.min.css" integrity="sha256-auNBxJ+1OpvUJfYRsPihqLzJFUM9D3gpb8nOh5v0LiM=" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.css" integrity="sha256-Lfe6+s5LEek8iiZ31nXhcSez0nmOxP+3ssquHMR3Alo=" crossorigin="anonymous" />
    <link href="~/css/main.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Agenda.css" />

</head>
<body>
    @{
        if (ViewData["rol"] as string == "Roostermaker")
        {
            <div class="card mb-4">
                <div class="card-header bg-dark text-white" style="border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;">Werknemer:</div>
                <div class="card-body bg-white">
                    <select onChange="FetchEvents()" class="form-control" name="userId" id="userIdField1">
                        @{ if (ViewData["employees"] == null)
                            { }
                            else
                            {
                                string[] employeesId = ViewData["employeesId"] as string[];
                                string[] employees = ViewData["employees"] as string[];

                                for (int i = 0; i < employees.Length; i++)
                                {
                                    <option selected="@(ViewData["userId"] as string == employeesId[i])" value="@employeesId[i]">@employees[i]</option>
                                }
                            }
                        }
                    </select>
                    <span asp-validation-for="voornaam" class="text-danger"></span>
                </div>
            </div>
        }
    }
    <div class="card mb-4">
        <div class="card-header bg-dark text-white" style="border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;">Rooster:</div>
        <div class="card-body bg-white">
            <div id="calendar"></div>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <form id="modalForm" asp-action="CreateEvent" asp-controller="Planner" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input id="eventIdField" type="hidden" asp-for="eventId" value="0" />
                        <input type="hidden" asp-for="voornaam" value="........." />
                        @if (ViewBag.Rol == "Roostermaker")
                        {
                            <div class="form-group">
                                <label asp-for="userId" class="control-label">Werknemer: </label>
                                <select asp-for="userId" class="form-control" id="userIdField" name="userId" value="">
                                    @{ if (ViewData["employees"] == null)
                                        { }
                                        else
                                        {
                                            string[] employeesId = ViewData["employeesId"] as string[];
                                            string[] employees = ViewData["employees"] as string[];
                                            for (int i = 0; i < employees.Length; i++)
                                            {
                                                <option selected="@(employeesId[i])" value="@employeesId[i]">@employees[i]</option>
                                            }
                                        }
                                    }
                                </select>
                                <span asp-validation-for="voornaam" class="text-danger"></span>
                            </div>
                        }

                        <div class="form-group">
                            <label asp-for="title" class="control-label">Titel: </label>
                            <input id="titleField" asp-for="title" class="form-control" value="" />
                            <span asp-validation-for="title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="description" class="control-label">Beschrijving: </label>
                            <input id="descriptionField" asp-for="description" class="form-control" value="" />
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="startDate" class="control-label">Start datum: </label>
                            <input id="startField" asp-for="startDate" class="form-control" />
                            <span asp-validation-for="startDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="endDate" class="control-label">Eind datum: </label>
                            <input id="endField" asp-for="endDate" class="form-control" />
                            <span asp-validation-for="endDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="themeColor" class="control-label">Soort: </label>
                            <select asp-for="themeColor" class="form-control" id="themeColorField" name="themeColor" value="">
                                <option value="#E9967A">Stand-by</option>
                                <option value="#98FB98">Incidenten</option>
                                <option value="#FFFF99">Pauze</option>
                                <option value="#D8BFD8">Verlof</option>
                                <option value="#87CEFA">Noodgevallen</option>
                            </select>
                            <span asp-validation-for="themeColor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="isFullDay" class="control-label">Hele dag: </label>
                            <input id="fullDayField" asp-for="isFullDay" class="form-control" value="" />
                            <span asp-validation-for="isFullDay" class="text-danger"></span>
                        </div>
                        <input id="submitButton" onClick="HandleRequest()" value="Wijzig" class="btn btn-primary" />
                        <input type="button" value="Verwijder" class="btn btn-primary" onclick="DeleteEvent(eventId)" />
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>





